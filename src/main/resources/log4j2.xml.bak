<?xml version="1.0" encoding="utf-8"?>
<Configuration status="debug">
    <Appenders>
        <Console name="SYSOUT" target="SYSTEM_OUT">
            <PatternLayout patter="%d{yyyy-MM-dd HH:mm:ss.SSS} [%level] [%t] %-5p [%c] - %m%n  "/>
        </Console>

        <!-- name可以自定义，作用是在Loggers中AppenderRef中使用 -->
        <!-- fileName定义输出文件名称（当前文件） -->
        <!-- filePattern定义输出文件名称（文件满足条件后自动截断，生成历史文件） -->
        <RollingFile name="bootdemo-log"
                     fileName="D:/wangzh_debug.log"
                     filePattern="D:/wangzh_%d{yyyy-MM-dd}-debugs.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%level] [%t] %c{1} - %msg%n</Pattern>
            </PatternLayout>

            <!-- 文件截断的条件，具体参考文档 -->
            <Policies>
                <TimeBasedTriggeringPolicy interval="24"/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="com.wangzh.bootdemo" level="debug" additivity="false">
            <appender-ref ref="bootdemo-log"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="SYSOUT"/>
        </Root>
    </Loggers>
</Configuration>